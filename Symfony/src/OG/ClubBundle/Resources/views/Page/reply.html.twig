<tr id="reply_{% block replyid %}0{% endblock %}" style="background-color:#f6f6f6;">
    <td colspan="4" style="position:relative"> 
        <div style="float:left;position:absolute;padding-right:10px"> 
            <img src="{{ asset ('images/') }}{% block picture %}profile.jpg{% endblock %}" alt="Profile" height="30px" width="30px"/>
        </div><div style="float:right;display:block;">
            <span style="color:ddd;font-size:12px">
                <a class="reply_delete" style="text-decoration:none;color:#ddd;" href="#" onclick="delete_reply({{ block('replyid') }});return false;">X</a> 
            </span>
        </div>
        <p style="font-size:14px;color:000;margin:0;padding-left:40px;padding-right:20px;">
            <b></b><br>
            <span style="font-size:12px;color:#494949;"></span>
        </p>
    </td>
</tr>
